<html>
    <head>
        <title>Mini Message Board</title>
    </head>
    <body>
        <h1><%= title %></h1>
        <ul>
            <% messages.forEach(msg => { %>
                <li>
                    <strong><%= msg.user %></strong>: <%= msg.text %>
                    <br>
                    <small><%= msg.added.toLocaleString() %></small>
                </li>
            <% }); %>
        </ul>

        <a href="/new">Send a Message</a>
    </body>
</html>