<html>
  <head>
    <title><%= title %></title>
    <link rel="stylesheet" href="/styles.css">
  </head>
  <body>
    <h1><%= title %></h1>

    <div class="actions">
      <a href="/new">Add a new message</a>
    </div>
    
    <div class="card-container">
      <% messages.forEach((msg, i) => { %>
        <div class="card">
          <strong><%= msg.user %></strong>
          <p><%= msg.text %></p>
          <small><%= msg.added.toLocaleString() %></small>
          <br><br>
          <!-- <a href="/message/<%= i %>">Open</a> -->
        </div>
      <% }); %>
    </div>
  </body>
</html>
